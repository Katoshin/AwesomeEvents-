<% now = Time.zone.now %>
<div class="page-header">
	<h1>この曲が聞きたいYO!</h1>
	<p> 聴きたい曲のURLを入力しなYO!</p>
</div>			

<%= form_for(@music, class: 'form-horizontal', role: 'form') do |f| %>
	<% if @music.errors.any? %>
		<div class="alert alert-danger">
			<ul>
				<% @music.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="form-group">
		<%= f.label :url %>
		<%= f.text_field :url, class: 'form-control' %>
	</div>
	<%= f.submit 'この曲が聞きたいYO!', class: 'btn btn-default', data: { disable_with: '作成中...' } %>
<% end %>
